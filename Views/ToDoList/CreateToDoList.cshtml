@model ToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İşlem Ekle</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar ekleme işlemlerini aşağıdan gerçekleştirebilirsiniz.
						</div>
						<form method="post">
							<label>Başlık & İçerik</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>Görsel Adresi</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">İşlem Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

